#include<stdio.h>
#include<math.h>
void main()
    {     
          int n;
          float a,cr,ch,l,b,h,s,H,r,R;
          printf("1. Cube\n2. Cylinder\n3. Cuboid\n4. Cone\n5. Sphere");
          printf("\nEnter choice : ");
          scanf("%d",&n);
          switch(n)
          {
                case 1 : printf("\nEnter sides of cube : ");
                         scanf("%f",&a);
                         printf("\nSurface Area = %f ",6*a*a);
                         printf("\nVolume = %f ",a*a*a);
                         break;
                case 2 : printf("\nEnter height and radius : ");
                         scanf("%f%f",&ch,&cr);
                         printf("\nSurface Area = %f ",((2*3.14*cr*cr)+(2*3.14*cr*ch));
                         printf("\nVolume = %f ",3.14*cr*cr*ch);
                         break;
                case 3 : printf("\nEnter length breadth and height : ");
                         scanf("%f%f%f",&l,&b,&h);
                         printf("\nSurface Area = %f ",(2*((l*b)+(b*h)+(h*l))));
                         printf("\nVolume = %f",l*b*h);
                         break;
                case 4 : printf("\nEnter slantheight,height and base : ");
                         scanf("%f%f%f",&s,&H,&r);
                         printf("\nSurface Area = %f ",((3.14*r*r)+(3.14*s*r)));
                         printf("\nVolume = %f",((1/3)*3.14*r*r*H));
                         break;
                case 5 : printf("\nEnter radius ");
                         scanf("%f",&R);
                         printf("\nSurface Area = %f ",(4*3.14*R*R));
                         printf("\nVolume = %f",((4/3)*3.14*R*R*R));
                         break;
                default : printf("\n*****ERROR*****");
           } 
           
     }                    
