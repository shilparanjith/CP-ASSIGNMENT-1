#include<stdio.h>
void main()
  {
      int n,r,fact1=1,fact2=1,i,p,c,fact3=1;
      printf("Enter values for n and r : ");
      scanf("%d%d",&n,&r);
      for(i=1;i<=n;i++)
            fact1*=i;
      for(i=1;i<=(n-r);i++)
            fact2*=i;
      p=fact1/fact2;
      for(i=1;i<=r;i++)
            fact3*=i;
      c=fact1/(fact2*fact3);
      printf("\%dP%d = %d",n,r,p);
      printf("\%dC%d = %d",n,r,c);
  }
      
           
