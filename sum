#include<stdio.h>
void main()
  {
      int n,sum;
      printf("Enter the limit : ");
      scanf("%d",&n);
      printf("\nThe first %d natyral numbers is : ",n);
      for(int i=1;sum=0;i<=n;i++)
      {
          printf("\t%d",i);
          sum+=i;
      }
      printf("\nThe sum of first %d natural numbers is : %d",n,sum);
  }
