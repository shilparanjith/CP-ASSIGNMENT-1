#include <stdio.h>
void main()
  {
         int rc=1, 
 
         printf("Enter number of rows in pascals triangle: ");
         scanf("%d",&r);
 
         for(int i=0; i<r; i++)            
            {
                for(int n=1;n<=rows-i;n++)  
                printf("\t");
 
                for(int j=0;j<=i;j++)     
                {
                    if(j==0||i==0)     
                    c=1;
                    else
                    c=c*(i-j+1)/j; 
                     printf("%d",c);
                }
               printf("\n");
            }
    }
 
    
  
