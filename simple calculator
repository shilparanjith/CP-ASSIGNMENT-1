#include<stdio.h>
void main()
  {
        char ch;
        float a,b;
        printf("Enter two numbers : ");
        scanf("%f%f",&a,&b);
        printf("\nEnter operation (+,-,*,/) : ");
        scanf("%c",&ch);
        switch(ch)
          {
                case '+' : printf("\nThe sum of %f and %f = %f",a,b,a+b);
                           break;
                case '-' : printf("\nThe subtraction of %f and %f = %f",a,b,a-b);
                           break;
                case '*' : printf("\nThe multiplication of %f and %f = %f",a,b,a*b);
                           break;
                case '/' : printf("\nThe division of %f and %f = %f",a,b,a/b);
                           break;
                default :  printf("\n*******ERROR**********");
           }
     
   }                      
                           
